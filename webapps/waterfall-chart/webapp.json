{
    "meta": {
        "label": "Waterfall chart",
        "description": "",
        "icon": "icon-bar-chart"
    },

    "baseType": "STANDARD",
    "hasBackend": "true",

    "chart" : {
        "datasetParamName": "dataset",
        "leftBarLabel": "Chart parameters",
        "leftBarParams": [
            {
                "name": "max_displayed_values",
                "type": "INT",
                "label": "Max displayed categories",
                "description": "",
                "mandatory": true,
                "defaultValue": 20
            },
            {
                "name": "group_others",
                "type": "BOOLEAN",
                "label": "'Others'",
                "description": "Group extra values in a 'Others' category",
                "defaultValue":true
            }
        ],
        "topBar": "STD_FORM",
        "topBarParams": [
            {
                "name": "categories",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Categories (X)",
                "description": "Sum all values within same category",
                "mandatory": true
            },
            {
                "name": "values",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Values (Y)",
                "description": "",
                "mandatory": true
            }
        ],
        "canFilter": true,
        "canFacet": false
    }
}
